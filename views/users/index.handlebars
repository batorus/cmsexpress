<h1 class="text-center mb-3">{{title}}</h1>

{{# if errors }}
    {{# each errors }}
          <p class="alert alert-danger">{{ this.msg }}</p>
    {{/each}}
{{/if}}

<form action="/app/users/create" method="POST" class="mb-4" novalidate>

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{name}}" class="form-control" >
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" name="email" value="{{email}}" class="form-control">
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input type="text" name="password" value="{{password}}" class="form-control">
  </div>

  <input type="submit" value="Add Member" class="btn btn-primary btn-block">

</form>

<h4>Members</h4>

<ul class="list-group">
  {{#each results}}
    <li class="list-group-item">
      <span>{{this.name}} : {{this.email}}<span>
      <a href="/app/users/delete/{{this.id}}">Delete</a>
      <a href="/app/users/edit/{{this.id}}">Edit</a>
   </li>

  {{/each}}
</ul>